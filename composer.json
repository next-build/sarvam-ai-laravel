{
    "name": "nextbuild/sarvam-ai-laravel",
    "description": "Laravel package for Sarvam AI integration with speech-to-text, text-to-speech, translation, and chat completion capabilities",
    "keywords": ["laravel", "sarvam-ai", "speech-to-text", "text-to-speech", "translation", "ai", "chat", "nlp"],
    "license": "MIT",
    "authors": [
        {
            "name": "NextBuild",
            "email": "support@nextbuild.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^9.0|^10.0|^11.0|^12.0",
        "illuminate/http": "^9.0|^10.0|^11.0|^12.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0",
        "orchestra/testbench": "^7.0|^8.0|^9.0",
        "mockery/mockery": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "NextBuild\\SarvamAI\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NextBuild\\SarvamAI\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "NextBuild\\SarvamAI\\SarvamAIServiceProvider"
            ],
            "aliases": {
                "SarvamAI": "NextBuild\\SarvamAI\\Facades\\SarvamAI"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    }
}
